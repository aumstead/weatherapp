@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .no-padding-left {
        padding-left: 0;
    }
</style>

<h1 class="mb-4">Get 7-day forecast with lat/long</h1>

<h3>Wheaton's coordinates:</h3>
<h4>Lat: 41.8661</h4>
<h4>Long: -88.1070</h4>

<form method="post" class="col-3 mt-4 no-padding-left">
    <div class="form-group">
        <label class="" asp-for="Lat"></label>
        <input class="form-control" asp-for="Lat" />
        <span asp-validation-for="Lat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="" asp-for="Long"></label>
        <input class="form-control" asp-for="Long" />
        <span asp-validation-for="Long" class="text-danger"></span>
    </div>
    <button class="btn-primary" type="submit">Submit</button>
</form>
